{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "pulumi/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}